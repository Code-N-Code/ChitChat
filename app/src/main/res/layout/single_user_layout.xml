<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="5dp"
    android:elevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:padding="5dp"
        android:layout_height="match_parent"
        android:id="@+id/singleuser_profile_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/singleuser_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:padding="5dp"
        android:layout_toEndOf="@+id/singleuser_profile_img"
        android:text="Name"
        android:textSize="20sp" />
    <ImageView
        android:layout_margin="10dp"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:visibility="invisible"
        android:layout_toRightOf="@id/singleuser_name"
        android:id="@+id/single_user_layout_green_dot"
        android:src="@drawable/green_dot"/>
    <TextView
        android:id="@+id/singleuser_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/singleuser_name"
        android:layout_toRightOf="@id/singleuser_profile_img"
        android:padding="5dp"
        android:text="Status"
        android:textStyle="italic"
        android:textSize="18sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>